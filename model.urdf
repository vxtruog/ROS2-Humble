<?xml version="1.0"?>
<!-- http://wiki.ros.org/urdf/XML/link -->
<robot name="simple_robot">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.3"/>
      </geometry>
    <!--origin - toạ độ tham chiếu gốc -->
    <!-- rpy - r là roll, p là pitch, y là yaw -->
    <!-- xyz - x, y, z toạ độ ba 3D -->
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba-"0 1 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="first_link"/>
    <origin xyz="0 0 0.05"/>
    <axis xyz="0 0 1"/>
    <limit effort="300" velocity="2.0" lower="-1.2" upper="1.2" />
  </joint>

  <link name="first_link">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
  </link>
  
